TELEGRAM_BOT_TOKEN=

# Optional: comma-separated usernames and/or numeric IDs; empty allows all users.
# Examples: @alice,123456789,bob
TELEGRAM_ALLOWED_USERS=

# Optional legacy numeric ID allowlist (also supported).
TELEGRAM_ALLOWED_USER_IDS=

# Optional Discord bridge values (used when bridges.discord.enabled=true).
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=

# Optional: OpenCode binary path.
OPENCODE_BIN=opencode

# Optional: attach BUI sessions to a running OpenCode server URL.
OPENCODE_ATTACH_URL=

# Optional: BUI runtime locations.
BUI_RUNTIME_DIR=
BUI_DB_PATH=
BUI_UPLOAD_DIR=
BUI_LOCK_PATH=

# Optional: env file override.
BUI_ENV_PATH=

# Optional: set to 0 to disable pretty logs in terminal.
BUI_PRETTY_LOGS=1

# Optional: permission prompt timeout in ms (default 600000).
BUI_PERMISSION_TIMEOUT_MS=

# Optional: backlog handling configuration.
TELEGRAM_BACKLOG_STALE_SECONDS=45
TELEGRAM_BACKLOG_BATCH_WINDOW_MS=1200

# Optional: local speech-to-text command for voice/audio.
# Use {{input}} placeholder and optional {{output}} placeholder.
TELEGRAM_STT_COMMAND=
TELEGRAM_STT_TIMEOUT_MS=120000
